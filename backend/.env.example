# EduGamify Environment Configuration
# Copy this file to .env and update with your actual values

# Flask Secret Key (generate a secure random string)
SECRET_KEY=change-this-to-a-random-secure-key

# Database Connection URL
# Format: mysql+mysqlconnector://username:password@host:port/database
DATABASE_URL=mysql+mysqlconnector://root:your_password@localhost/gamified_elearning

# Flask Debug Mode (set to False in production)
FLASK_DEBUG=True

# Optional: Custom port (default is 5000)
# FLASK_PORT=5000

# Optional: Custom host (default is 0.0.0.0)
# FLASK_HOST=0.0.0.0
